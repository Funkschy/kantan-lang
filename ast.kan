// These have to match their respective MirBinaryKind
type BinaryKind enum {
    Add = 1, // these have to start from 1, for AssignType to work
    Sub,
    Mul,
    Div,
    Mod,

    ST,
    SE,
    GT,
    GE,

    Eq,
    NE,
    LogAnd,
    LogOr
}

type UnaryKind enum {
    Ref = 1,
    Deref,
    NegBool,
