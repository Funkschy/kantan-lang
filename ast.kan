/////////// base expr ///////////

type Expr struct {
    kind: ExprKind,
    ty: *ty.Type,
    span: span.Span
}

def create_expr(kind: ExprKind, span: span.Span): Expr {
    return Expr { kind: kind, ty: null, span: span };
}

def is_assignable(e: *Expr): bool {
    let assignable = is_access_expr(e)
        || is_ident_expr(e);

    if is_unary_expr(e) {
        assignable = as_unary_expr(e).kind == UnaryKind.Deref;
    }

    return assignable;
}

def expr_free(e: *Expr): void {
    if e == null {
        return;
    }

    if is_binary_expr(e) {
        let b_expr = as_binary_expr(e);
        if b_expr.free_left {
            expr_free(b_expr.left);
        }
        expr_free(b_expr.right);
    } else if is_assign_expr(e) {
        let a_expr = as_assign_expr(e);
        expr_free(a_expr.left);
        expr_free(a_expr.right);
    } else if is_access_expr(e) {
        let a_expr = as_access_expr(e);
        expr_free(a_expr.left);
        expr_free(a_expr.right as *Expr);
    } else if is_call_expr(e) {
        let c_expr = as_call_expr(e);
        expr_free(c_expr.callee);
        free_al(&c_expr.args);
    } else if is_init_expr(e) {
        let i_expr = as_init_expr(e);
        expr_free(i_expr.struct_ty);
        free_il(&i_expr.inits);
    } else if is_unary_expr(e) {
        expr_free(as_unary_expr(e).right);
    } else if is_as_expr(e) {
        expr_free(as_as_expr(e).expr);
    } else if is_new_expr(e) {
        expr_free(as_new_expr(e).expr);
    }

    delete e;
}

def expr_to_string(e: *Expr): string {
    if e == null {
        return std.strdup("(nil)");
    }

    if is_int_expr(e) {
        let i_expr = as_int_expr(e);
        let len = span.len(e.span);
        return std.strndup(i_expr.ptr, len);
    }

    if is_float_expr(e) {
        let f_expr = as_float_expr(e);
        let len = span.len(e.span);
        return std.strndup(f_expr.ptr, len);
    }

    if is_null_expr(e) {
        return std.strdup("null");
    }

    if is_undefined_expr(e) {
        return std.strdup("undefined");
    }

    if is_string_expr(e) {
        let len = span.len(e.span);
        // include the quotes
        return std.strndup(e.span.start - 1, len + 2);
    }

    if is_char_expr(e) {
        let c_expr = as_char_expr(e);
        let len = span.len(e.span);
        // include the quotes
        return std.strndup(c_expr.ptr - 1, len + 2);
    }

    if is_ident_expr(e) {
        let i_expr = as_ident_expr(e);
        return ident.to_string(&i_expr.ident);
    }

    if is_new_expr(e) {
        let n_expr = as_new_expr(e);
        let expr_s = expr_to_string(n_expr.expr);
        let s = std.format_str("new %s", expr_s);

        delete expr_s;
        return s;
    }

    if is_sizeof_expr(e) {
        let s_expr = as_sizeof_expr(e);
        let ty_s = tyid.to_string(&s_expr.ty);
        let s = std.format_str("sizeof %s", ty_s);

        delete ty_s;
        return s;
    }

    if is_as_expr(e) {
        let a_expr = as_as_expr(e);
        let expr_s = expr_to_string(a_expr.expr);
        let ty_s = tyid.to_string(&a_expr.ty);
        let s = std.format_str("%s as %s", expr_s, ty_s);

        delete expr_s;
        delete ty_s;
        return s;
    }

    if is_assign_expr(e) {
        let a_expr = as_assign_expr(e);

        let left = expr_to_string(a_expr.left);
        let right = expr_to_string(a_expr.right);

        let s = std.format_str("%s = %s", left, right);
        delete left;
        delete right;

        return s;
    }

    if is_access_expr(e) {
        let a_expr = as_access_expr(e);

        let left = expr_to_string(a_expr.left);
        let right = expr_to_string(a_expr.right as *Expr);

        let s = std.format_str("%s.%s", left, right);
        delete left;
        delete right;

        return s;
    }

    if is_unary_expr(e) {
        let u_expr = as_unary_expr(e);
        let right = expr_to_string(u_expr.right);
        let tok_str = unary2str(u_expr.kind);

        let s = std.format_str("(%s%s)", tok_str, right);
        delete right;

        return s;
    }

    if is_binary_expr(e) {
        let b_expr = as_binary_expr(e);

        let left = expr_to_string(b_expr.left);
        let right = expr_to_string(b_expr.right);
        let tok_str = binary2str(b_expr.kind);

        let s = std.format_str("(%s%s%s)", left, tok_str, right);
        delete left;
        delete right;

        return s;
    }

    if is_call_expr(e) {
        let c_expr = as_call_expr(e);

        let ident = expr_to_string(c_expr.callee);
        let args = arg_list_to_string(&c_expr.args);

        let s = std.format_str("%s(%s)", ident, args);
        delete ident;
        delete args;

        return s;
    }

    if is_init_expr(e) {
        let i_expr = as_init_expr(e);

        let ident = expr_to_string(i_expr.struct_ty);
        let inits = init_list_to_string(&i_expr.inits);

        let s = std.format_str("%s{%s}", ident, inits);
        delete ident;
        delete inits;

        return s;
    }

    return null;
}

/////////// ArgList ///////////
// TODO(#18): should be in own file, but can't because compiler can't handle circular imports

type ArgList struct {
    args: ptrvec.Vec
}

def create_arg_list(): ArgList {
    return ArgList { args: ptrvec.create() };
}

def num_args(al: *ArgList): i32 {
    return al.args.len;
}

def get_arg_at(al: *ArgList, i: i32): *Expr {
    return ptrvec.get(&al.args, i) as *Expr;
}

def set_arg_at(al: *ArgList, i: i32, expr: *Expr): void {
    ptrvec.set(&al.args, i, expr as *void);
}

def push_arg(al: *ArgList, arg: *Expr): void {
    ptrvec.push_ptr(&al.args, arg as *void);
}

def free_al(al: *ArgList): void {
    let i = 0;
    while i < al.args.len {
        let e = ptrvec.get(&al.args, i) as *Expr;
        expr_free(e);
        i = i + 1;
    }

    ptrvec.free_v(&al.args);
}

def arg_list_to_string(al: *ArgList): string {
    let args = (new '\0') as string;

    let i = 0;
    while i < al.args.len {
        let a = get_arg_at(al, i);
        let s = expr_to_string(a);

        let comma_len = 0;
        if i > 0 {
            comma_len = 2;
        }

        let new_len = std.strlen(args) + std.strlen(s) + 1 + comma_len;
        let new_args = std.malloc(new_len) as string;
        let old_args = args;
        args = std.strcpy(new_args, args);
        delete old_args;

        if comma_len > 0 {
            args = std.strcat(args, ", ");
        }

        args = std.strcat(args, s);
        delete s;

        i = i + 1;
    }

    return args;
}

/////////// InitList ///////////
// TODO(#25): should be in own file, but can't because compiler can'e handle circular imports

type Init struct {
    ident: ident.Ident,
    expr: *Expr
}

def create_init(ident: ident.Ident, expr: *Expr): Init {
    return Init { ident: ident, expr: expr };
}

def empty_init(): Init {
    return Init { ident: ident.empty(), expr: null };
}

type InitList struct {
    inits: vec.Vec
}

def create_init_list(): InitList {
    return InitList { inits: vec.create(sizeof Init) };
}

def num_inits(il: *InitList): i32 {
    return il.inits.len;
}

def init_expr_at(il: *InitList, i: i32): *Expr {
    let init = empty_init();
    if !init_at(il, i, &init) {
        return null;
    }
    return init.expr;
}

def set_init_expr_at(il: *InitList, i: i32, value: *Expr): void {
    (il.inits.get_ptr(i) as *Init).expr = value;
}

def init_at(il: *InitList, i: i32, dest: *Init): bool {
    return il.inits.get(i, dest as *void);
}

def push_init(il: *InitList, init: Init): void {
    il.inits.push(&init as *void);
}

def free_il(il: *InitList): void {
    let i = 0;
    while i < il.inits.len {
        let init = empty_init();
        init_at(il, i, &init);
        expr_free(init.expr);
        i = i + 1;
    }

    il.inits.free();
}

def init_list_to_string(il: *InitList): string {
    let inits = (new '\0') as string;

    let i = 0;
    while i < il.inits.len {
        let init = empty_init();
        if !init_at(il, i, &init) {
            delete inits;
            return null;
        }
        let n = ident.to_string(&init.ident);
        let e = expr_to_string(init.expr);

        let extra_len = 2; // ': '
        if i > 0 {
            extra_len = 4; // ': ..., '
        }

        let new_len = std.strlen(inits) + std.strlen(n) + std.strlen(e) + 1 + extra_len;
        let new_inits = std.malloc(new_len) as string;
        let old_inits = inits;
        inits = std.strcpy(new_inits, inits);
        delete old_inits;

        if extra_len > 2 {
            inits = std.strcat(inits, ", ");
        }

        inits = std.strcat(inits, n);
        inits = std.strcat(inits, ": ");
        inits = std.strcat(inits, e);
        delete n;
        delete e;

        i = i + 1;
    }

    return inits;
}
