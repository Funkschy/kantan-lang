/////////// assign expr ///////////

type AssignType enum {
    Normal, PlusEq, MinusEq, TimesEq, DivEq, RemEq
}

type AssignExpr struct {
    e: Expr,
    assign_type: AssignType, // =, +=, -=, *=, /=, %=
    assign_span: span.Span,
    left: *Expr,
    right: *Expr
}

def new_assign_expr(
    span: span.Span,
    assign_token: lexer.Token,
    left: *Expr,
    right: *Expr
): *Expr {
    // TODO: remove this, when casting between enums and their base type is implemented
    let eq = lexer.TokenType.Eq;
    let normalized = *(&assign_token.ty as *i32) - *(&eq as *i32);
    let assign_type = *(&normalized as *AssignType);

    return (new AssignExpr {
        e: create_expr(ExprKind.Assignment, span),
        assign_type: assign_type,
        assign_span: assign_token.span,
        left: left,
        right: right
    }) as *Expr;
}

def is_assign_expr(e: *Expr): bool {
    return e.kind == ExprKind.Assignment;
}

def as_assign_expr(e: *Expr): *AssignExpr {
    return e as *AssignExpr;
}

