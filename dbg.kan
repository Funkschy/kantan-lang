import "io";
import "std";

extern def assert_fmt(condition: bool, fmt: string, ...);

def assert(condition: bool, err_text: string) {
    assert_fmt(condition, err_text);
}

def unreachable() {
    assert(false, "reached unreachable code");
}

def not_implemented() {
    io.printf("not implemented\n");
    std.abort();
}
