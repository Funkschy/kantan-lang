import "path";

extern def read_file(path: string, dest: *string): i32;

type File struct {
    path: path.Path
}

def empty(): File {
    return File { path: path.empty() };
}

def create(path: path.Path): File {
    return File { path: path };
}

def name(f: *File): string {
    return path.to_string(&f.path);
}

def read_to_string(s: *File, dest: *string): i32 {
    return read_file(path.to_string(&s.path), dest);
}
